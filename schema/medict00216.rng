<?xml version="1.0" encoding="UTF-8"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0" 
  ns="http://www.tei-c.org/ns/1.0" 
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
  >
  <include href="medict.rng">
    <define name="body">
      <element name="body">
        <oneOrMore>
          <choice>
            <ref name="cb"/>
            <ref name="label"/>
            <ref name="entryFree"/>
            <ref name="pb"/>
          </choice>
        </oneOrMore>
      </element>
    </define>
    <define name="entryFree">
      <element name="entryFree">
        <zeroOrMore>
          <choice>
            <ref name="cb"/>
            <ref name="figure"/>
            <ref name="pb"/>
          </choice>
        </zeroOrMore>
        <ref name="p1"/>
        <zeroOrMore>
          <choice>
            <ref name="cb"/>
            <ref name="figure"/>
            <ref name="label"/>
            <ref name="p"/>
            <ref name="pb"/>
            <ref name="table"/>
            <ref name="term"/>
          </choice>
        </zeroOrMore>
      </element>
    </define>
    <define name="pb">
      <element name="pb">
        <ref name="n"/>
        <optional>
          <ref name="facs"/>
        </optional>
        <optional>
          <ref name="pb.corresp"/>
        </optional>
      </element>
    </define>
    <define name="n">
      <attribute name="n">
        <data type="string">
          <param name="pattern">\d+</param>
        </data>
      </attribute>
    </define>
    <define name="orth">
      <element name="orth">
        <text/>
      </element>
    </define>
  </include>
  <define name="p1">
    <element name="p">
      <optional>
        <attribute name="rend"/>
      </optional>
      <optional>
        <text/>
      </optional>
      <ref name="orth"/>
      <oneOrMore>
        <choice>
          <text/>
          <ref name="cb"/>
          <ref name="damage"/>
          <ref name="i"/>
          <ref name="lb"/>
          <ref name="figure"/>
          <ref name="foreign"/>
          <ref name="form"/>
          <ref name="formula"/>
          <ref name="graphic"/>
          <ref name="num"/>
          <ref name="note"/>
          <ref name="orth"/>
          <ref name="persName"/>
          <ref name="ref"/>
          <ref name="pb"/>
          <ref name="sc"/>
          <ref name="sup"/>
          <ref name="term"/>
        </choice>
      </oneOrMore>
    </element>
  </define>
</grammar>